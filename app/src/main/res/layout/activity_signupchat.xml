<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">


    <EditText
        android:id="@+id/edname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="ten dang nhap"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="176dp" />

    <EditText
    android:id="@+id/edEmail"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:hint="email"
    app:layout_constraintTop_toBottomOf="@+id/edname"
    tools:ignore="MissingConstraints"></EditText>

    <EditText
        android:id="@+id/edPss"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="pass"
        app:layout_constraintTop_toBottomOf="@+id/edEmail"
        tools:ignore="MissingConstraints"></EditText>

    <EditText
        android:id="@+id/edCfpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="cfpass"
        app:layout_constraintTop_toBottomOf="@+id/edPss"
        tools:ignore="MissingConstraints"></EditText>

    <Button
        android:id="@+id/Btnlogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="76dp"
        android:text="login"
        app:layout_constraintTop_toBottomOf="@+id/edCfpass"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/BtnSignUp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:text="BtnSignUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btnlogin" />


</androidx.constraintlayout.widget.ConstraintLayout>
