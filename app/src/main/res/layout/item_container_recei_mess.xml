<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/imgprofie"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textMess">
    </ImageView>
    <TextView
        android:layout_marginStart="@dimen/_10sdp"
        android:id="@+id/textMess"
        android:layout_width="0dp"
        android:padding="@dimen/_12sdp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgprofie"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:background="@drawable/backgr_recei_mess"
        app:layout_constraintWidth_percent="0.75">

    </TextView>


    <TextView
        android:textColor="@color/primary_text"
        android:textSize="10dp"
        android:id="@+id/tvDatetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/textMess"
        app:layout_constraintTop_toTopOf="@id/textMess" />


</androidx.constraintlayout.widget.ConstraintLayout>